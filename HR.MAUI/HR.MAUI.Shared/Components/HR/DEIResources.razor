@page "/hr/dei-resources"
@using global::HR.Models
@using System.Text.Json
@using System.Text
@using Microsoft.JSInterop
@inject HttpClient Http
@inject IJSRuntime JSRuntime

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">Diversity, Equity & Inclusion Resources</h3>
                    <button class="btn btn-primary" @onclick="ShowCreateModal">
                        <i class="fas fa-plus"></i> Add DEI Resource
                    </button>
                </div>
                <div class="card-body">
                    <!-- Search Section -->
                    <div class="row mb-3">
                        <div class="col-md-10">
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-search"></i></span>
                                <input type="text" class="form-control" placeholder="Search DEI resources..." @bind="searchTerm" @oninput="FilterResources" />
                            </div>
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-outline-secondary w-100" @onclick="ClearFilters">Clear Search</button>
                        </div>
                    </div>

                    <!-- Resources Table -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Title</th>
                                    <th>Content Preview</th>
                                    <th>Created</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (filteredResources?.Any() == true)
                                {
                                    @foreach (var resource in filteredResources)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-users text-primary me-2"></i>
                                                    <strong>@resource.Title</strong>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="text-truncate" style="max-width: 400px;" title="@resource.Content">
                                                    @resource.Content
                                                </div>
                                            </td>
                                            <td>@resource.CreatedAt.ToString("yyyy-MM-dd")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <button class="btn btn-sm btn-outline-info" @onclick="() => ShowViewModal(resource)">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-primary" @onclick="() => ShowEditModal(resource)">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteResource(resource.DEIResource_ID)">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center text-muted">No DEI resources found</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create/Edit Modal -->
<div class="modal fade @(showModal ? "show d-block" : "")" tabindex="-1" style="@(showModal ? "background-color: rgba(0,0,0,0.5);" : "")">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@(isEditing ? "Edit DEI Resource" : "Add DEI Resource")</h5>
                <button type="button" class="btn-close" @onclick="HideModal"></button>
            </div>
            <EditForm Model="currentResource" OnValidSubmit="SaveResource">
                <DataAnnotationsValidator />
                <div class="modal-body">
                    <div class="row">
                        <div class="col-12">
                            <div class="mb-3">
                                <label class="form-label">Title *</label>
                                <InputText class="form-control" @bind-Value="currentResource.Title" placeholder="DEI resource title..." required />
                                <ValidationMessage For="@(() => currentResource.Title)" class="text-danger" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="mb-3">
                                <label class="form-label">Content *</label>
                                <InputTextArea class="form-control" @bind-Value="currentResource.Content" rows="8" placeholder="Enter the DEI resource content..." required />
                                <ValidationMessage For="@(() => currentResource.Content)" class="text-danger" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideModal">Cancel</button>
                    <button type="submit" class="btn btn-primary">@(isEditing ? "Update" : "Create") Resource</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

<!-- View Modal -->
<div class="modal fade @(showViewModal ? "show d-block" : "")" tabindex="-1" style="@(showViewModal ? "background-color: rgba(0,0,0,0.5);" : "")">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">DEI Resource Details</h5>
                <button type="button" class="btn-close" @onclick="HideViewModal"></button>
            </div>
            <div class="modal-body">
                @if (viewResource != null)
                {
                    <div class="text-center mb-4">
                        <i class="fas fa-users fa-3x text-primary"></i>
                        <h3 class="mt-2">@viewResource.Title</h3>
                        <p class="text-muted">Created on @viewResource.CreatedAt.ToString("yyyy-MM-dd")</p>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="border rounded p-4" style="background-color: #f8f9fa; min-height: 300px;">
                                <div style="white-space: pre-wrap; line-height: 1.6;">
                                    @viewResource.Content
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="HideViewModal">Close</button>
                @if (viewResource != null)
                {
                    <button type="button" class="btn btn-primary" @onclick="() => ShowEditModal(viewResource)">
                        <i class="fas fa-edit"></i> Edit Resource
                    </button>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private List<DEIResourceResponse> resources = new();
    private List<DEIResourceResponse> filteredResources = new();
    
    private DEIResourceRequest currentResource = new();
    private DEIResourceResponse? viewResource = null;
    private bool showModal = false;
    private bool showViewModal = false;
    private bool isEditing = false;
    private int editingId = 0;
    
    private string searchTerm = "";

    public class ApiResponse
    {
        public int Total { get; set; }
        public int Page { get; set; }
        public int PageSize { get; set; }
        public List<DEIResourceResponse> Items { get; set; } = new();
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            var response = await Http.GetAsync("/api/deiresources");
            if (response.IsSuccessStatusCode)
            {
                var json = await response.Content.ReadAsStringAsync();
                var result = JsonSerializer.Deserialize<ApiResponse>(json, new JsonSerializerOptions { PropertyNameCaseInsensitive = true });
                resources = result?.Items ?? new();
            }

            FilterResources();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error loading data: {ex.Message}");
        }
    }

    private void FilterResources()
    {
        filteredResources = resources.Where(r =>
            string.IsNullOrEmpty(searchTerm) || 
            r.Title.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
            r.Content.Contains(searchTerm, StringComparison.OrdinalIgnoreCase)
        ).OrderByDescending(r => r.CreatedAt).ToList();
        
        StateHasChanged();
    }

    private void ClearFilters()
    {
        searchTerm = "";
        FilterResources();
    }

    private void ShowCreateModal()
    {
        currentResource = new DEIResourceRequest();
        editingId = 0;
        isEditing = false;
        showModal = true;
    }

    private void ShowEditModal(DEIResourceResponse resource)
    {
        currentResource = new DEIResourceRequest
        {
            Title = resource.Title,
            Content = resource.Content
        };
        editingId = resource.DEIResource_ID;
        isEditing = true;
        showModal = true;
        showViewModal = false; // Close view modal if open
    }

    private void ShowViewModal(DEIResourceResponse resource)
    {
        viewResource = resource;
        showViewModal = true;
    }

    private void HideModal()
    {
        showModal = false;
        currentResource = new DEIResourceRequest();
        editingId = 0;
    }

    private void HideViewModal()
    {
        showViewModal = false;
        viewResource = null;
    }

    private async Task SaveResource()
    {
        try
        {
            var json = JsonSerializer.Serialize(currentResource);
            var content = new StringContent(json, Encoding.UTF8, "application/json");
            
            HttpResponseMessage response;
            if (isEditing)
            {
                response = await Http.PutAsync($"/api/deiresources/{editingId}", content);
            }
            else
            {
                response = await Http.PostAsync("/api/deiresources", content);
            }

            if (response.IsSuccessStatusCode)
            {
                HideModal();
                await LoadData();
                await JSRuntime.InvokeVoidAsync("alert", $"DEI resource {(isEditing ? "updated" : "created")} successfully!");
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Error {(isEditing ? "updating" : "creating")} DEI resource.");
            }
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", $"Error: {ex.Message}");
        }
    }

    private async Task DeleteResource(int id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", "Are you sure you want to delete this DEI resource?"))
        {
            try
            {
                var response = await Http.DeleteAsync($"/api/deiresources/{id}");
                if (response.IsSuccessStatusCode)
                {
                    await LoadData();
                    await JSRuntime.InvokeVoidAsync("alert", "DEI resource deleted successfully!");
                }
                else
                {
                    await JSRuntime.InvokeVoidAsync("alert", "Error deleting DEI resource.");
                }
            }
            catch (Exception ex)
            {
                await JSRuntime.InvokeVoidAsync("alert", $"Error: {ex.Message}");
            }
        }
    }
}

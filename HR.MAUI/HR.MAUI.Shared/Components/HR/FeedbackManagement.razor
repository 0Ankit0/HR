@page "/hr/feedback-management"
@using global::HR.Models
@using System.Text.Json
@using System.Text
@inject HttpClient Http
@inject IAlertService AlertService

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">Feedback Management</h3>
                    <button class="btn btn-primary" @onclick="ShowCreateModal">
                        <i class="fas fa-plus"></i> Add Feedback
                    </button>
                </div>
                <div class="card-body">
                    <!-- Search and Filter Section -->
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-search"></i></span>
                                <input type="text" class="form-control" placeholder="Search feedback..." @bind="searchTerm" @oninput="FilterFeedback" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <select class="form-select" @bind="selectedEmployeeFilter" @bind:after="FilterFeedback">
                                <option value="">All Employees</option>
                                @foreach (var employee in employees)
                                {
                                    <option value="@employee.Employee_ID">@employee.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <InputDate class="form-control" @bind-Value="selectedDateFilter" @bind-Value:event="oninput" />
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-outline-secondary w-100" @onclick="ClearFilters">Clear Filters</button>
                        </div>
                    </div>

                    <!-- Feedback Table -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Employee</th>
                                    <th>Content</th>
                                    <th>Given By</th>
                                    <th>Date Given</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (filteredFeedback?.Any() == true)
                                {
                                    @foreach (var feedback in filteredFeedback)
                                    {
                                        <tr>
                                            <td>
                                                @{
                                                    var employee = employees.FirstOrDefault(e => e.Employee_ID == feedback.Employee_ID);
                                                }
                                                @if (employee != null)
                                                {
                                                    <span>@employee.Name</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="text-truncate" style="max-width: 300px;" title="@feedback.Content">
                                                    @feedback.Content
                                                </div>
                                            </td>
                                            <td>@(feedback.GivenBy ?? "Anonymous")</td>
                                            <td>@feedback.DateGiven.ToString("yyyy-MM-dd HH:mm")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <button class="btn btn-sm btn-outline-info" @onclick="() => ShowViewModal(feedback)">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-primary" @onclick="() => ShowEditModal(feedback)">
                                                        <i class="fas fa-edit"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteFeedback(feedback.Feedback_ID)">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center text-muted">No feedback found</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create/Edit Modal -->
<div class="modal fade @(showModal ? "show d-block" : "")" tabindex="-1" style="@(showModal ? "background-color: rgba(0,0,0,0.5);" : "")">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@(isEditing ? "Edit Feedback" : "Add Feedback")</h5>
                <button type="button" class="btn-close" @onclick="HideModal"></button>
            </div>
            <form @onsubmit="SaveFeedback" @onsubmit:preventDefault="true">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Employee *</label>
                                <select class="form-select" @bind="currentFeedback.Employee_ID" required>
                                    <option value="0">Select Employee</option>
                                    @foreach (var employee in employees)
                                    {
                                        <option value="@employee.Employee_ID">@employee.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Given By</label>
                                <input @bind="currentFeedback.GivenBy" class="form-control" placeholder="Feedback provider name..." />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Date Given *</label>
                                <input @bind="currentFeedback.DateGiven" class="form-control" type="datetime-local" required />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <div class="mb-3">
                                <label class="form-label">Feedback Content *</label>
                                <textarea @bind="currentFeedback.Content" class="form-control" rows="5" placeholder="Enter feedback content..." required></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideModal">Cancel</button>
                    <button type="submit" class="btn btn-primary">@(isEditing ? "Update" : "Create") Feedback</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- View Modal -->
<div class="modal fade @(showViewModal ? "show d-block" : "")" tabindex="-1" style="@(showViewModal ? "background-color: rgba(0,0,0,0.5);" : "")">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">View Feedback</h5>
                <button type="button" class="btn-close" @onclick="HideViewModal"></button>
            </div>
            <div class="modal-body">
                @if (viewFeedback != null)
                {
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Employee:</strong>
                            @{
                                var emp = employees.FirstOrDefault(e => e.Employee_ID == viewFeedback.Employee_ID);
                            }
                            <p>@(emp?.Name ?? "Unknown")</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Given By:</strong>
                            <p>@(viewFeedback.GivenBy ?? "Anonymous")</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <strong>Date Given:</strong>
                            <p>@viewFeedback.DateGiven.ToString("yyyy-MM-dd HH:mm")</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <strong>Feedback Content:</strong>
                            <div class="border rounded p-3 mt-2" style="background-color: #f8f9fa;">
                                @viewFeedback.Content
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="HideViewModal">Close</button>
            </div>
        </div>
    </div>
</div>

@code {
    private List<FeedbackResponse> feedbackList = new();
    private List<FeedbackResponse> filteredFeedback = new();
    private List<EmployeeResponse> employees = new();
    
    private FeedbackRequest currentFeedback = new();
    private FeedbackResponse? viewFeedback = null;
    private bool showModal = false;
    private bool showViewModal = false;
    private bool isEditing = false;
    private int editingId = 0;
    
    private string searchTerm = "";
    private string selectedEmployeeFilter = "";
    private DateTime? selectedDateFilter;

    public class ApiResponse
    {
        public int Total { get; set; }
        public int Page { get; set; }
        public int PageSize { get; set; }
        public List<FeedbackResponse> Items { get; set; } = new();
    }

    public class EmployeeApiResponse
    {
        public int Total { get; set; }
        public int Page { get; set; }
        public int PageSize { get; set; }
        public List<EmployeeResponse> Items { get; set; } = new();
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            var feedbackResponse = await Http.GetAsync("/api/feedback/continuous");
            if (feedbackResponse.IsSuccessStatusCode)
            {
                var feedbackJson = await feedbackResponse.Content.ReadAsStringAsync();
                var result = JsonSerializer.Deserialize<ApiResponse>(feedbackJson, new JsonSerializerOptions { PropertyNameCaseInsensitive = true });
                feedbackList = result?.Items ?? new();
            }

            var employeesResponse = await Http.GetAsync("/api/employees");
            if (employeesResponse.IsSuccessStatusCode)
            {
                var employeesJson = await employeesResponse.Content.ReadAsStringAsync();
                var result = JsonSerializer.Deserialize<EmployeeApiResponse>(employeesJson, new JsonSerializerOptions { PropertyNameCaseInsensitive = true });
                employees = result?.Items ?? new();
            }

            FilterFeedback();
        }
        catch (Exception ex)
        {
            await AlertService.ShowAlert($"Error loading data: {ex.Message}");
        }
    }

    private void FilterFeedback()
    {
        filteredFeedback = feedbackList.Where(f =>
            (string.IsNullOrEmpty(searchTerm) || 
             f.Content.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ||
             (f.GivenBy?.Contains(searchTerm, StringComparison.OrdinalIgnoreCase) ?? false) ||
             employees.Any(e => e.Employee_ID == f.Employee_ID && e.Name.Contains(searchTerm, StringComparison.OrdinalIgnoreCase))) &&
            (string.IsNullOrEmpty(selectedEmployeeFilter) || f.Employee_ID.ToString() == selectedEmployeeFilter) &&
            (!selectedDateFilter.HasValue || f.DateGiven.Date == selectedDateFilter.Value.Date)
        ).OrderByDescending(f => f.DateGiven).ToList();
        
        StateHasChanged();
    }

    private void ClearFilters()
    {
        searchTerm = "";
        selectedEmployeeFilter = "";
        selectedDateFilter = null;
        FilterFeedback();
    }

    private void ShowCreateModal()
    {
        currentFeedback = new FeedbackRequest
        {
            DateGiven = DateTime.Now
        };
        editingId = 0;
        isEditing = false;
        showModal = true;
    }

    private void ShowEditModal(FeedbackResponse feedback)
    {
        currentFeedback = new FeedbackRequest
        {
            Employee_ID = feedback.Employee_ID,
            Content = feedback.Content,
            GivenBy = feedback.GivenBy,
            DateGiven = feedback.DateGiven
        };
        editingId = feedback.Feedback_ID;
        isEditing = true;
        showModal = true;
    }

    private void ShowViewModal(FeedbackResponse feedback)
    {
        viewFeedback = feedback;
        showViewModal = true;
    }

    private void HideModal()
    {
        showModal = false;
        currentFeedback = new();
    }

    private void HideViewModal()
    {
        showViewModal = false;
        viewFeedback = null;
    }

    private async Task SaveFeedback()
    {
        try
        {
            var json = JsonSerializer.Serialize(currentFeedback);
            var content = new StringContent(json, Encoding.UTF8, "application/json");
            
            HttpResponseMessage response;
            if (isEditing)
            {
                response = await Http.PutAsync($"/api/feedback/continuous/{editingId}", content);
            }
            else
            {
                response = await Http.PostAsync("/api/feedback/continuous", content);
            }

            if (response.IsSuccessStatusCode)
            {
                HideModal();
                await LoadData();
                await AlertService.ShowAlert($"Feedback {(isEditing ? "updated" : "created")} successfully!");
            }
            else
            {
                await AlertService.ShowAlert($"Error {(isEditing ? "updating" : "creating")} feedback.");
            }
        }
        catch (Exception ex)
        {
            await AlertService.ShowAlert($"Error: {ex.Message}");
        }
    }

    private async Task DeleteFeedback(int id)
    {
        if (await AlertService.ShowConfirm("Are you sure you want to delete this feedback?"))
        {
            try
            {
                var response = await Http.DeleteAsync($"/api/feedback/continuous/{id}");
                if (response.IsSuccessStatusCode)
                {
                    await LoadData();
                    await AlertService.ShowAlert("Feedback deleted successfully!");
                }
                else
                {
                    await AlertService.ShowAlert("Error deleting feedback.");
                }
            }
            catch (Exception ex)
            {
                await AlertService.ShowAlert($"Error: {ex.Message}");
            }
        }
    }
}
